<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Journal App</title>
    <link rel="preload" as="image" href="/img/cover-login.webp">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <div class="login-form">
        <h2>Register</h2>

        <!-- Registration Messages -->
        <% if (locals.message) { %>
            <div class="alert alert-info py-2" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                <%= message %>
            </div>
            <% } %>
                <% if (locals.error) { %>
                    <div class="alert alert-danger py-2" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <%= error %>
                    </div>
                    <% } %>
                        <% if (locals.success) { %>
                            <div class="alert alert-success py-2" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <%= success %>
                            </div>
                            <% } %>

                                <form id="registerForm" action="/register" method="post" novalidate>
                                    <label>Enter Email :</label><br>
                                    <input type="email" id="email" name="email" required
                                        style="width: 100%;opacity: 50%;"><br>
                                    <div class="invalid-feedback text-start" id="emailError">Please enter a valid email
                                        address.</div>

                                    <label>Enter Password :</label><br>
                                    <div class="password-container">
                                        <input type="password" id="password" name="password" required
                                            style="width: 100%;opacity: 50%; margin-bottom: 0;">
                                        <button type="button" class="toggle-password" id="togglePassword"
                                            aria-label="Toggle password visibility">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <div class="password-strength" id="passwordStrength">
                                        <div class="strength-bar" id="strengthBar"></div>
                                    </div>
                                    <div class="invalid-feedback text-start" id="passwordError">Password must be at
                                        least 6 characters long.</div>

                                    <label>Confirm Password :</label><br>
                                    <div class="password-container">
                                        <input type="password" id="confirmPassword" name="confirmPassword" required
                                            style="width: 100%;opacity: 50%;">
                                        <button type="button" class="toggle-password" id="toggleConfirmPassword"
                                            aria-label="Toggle password visibility">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <div class="invalid-feedback text-start" id="confirmPasswordError">Passwords do not
                                        match.</div>

                                    <p>Already registered? Log in...</p>
                                    <div class="login-btn mt-3"
                                        style="display: flex; justify-content: center; gap: 10px;">
                                        <button type="submit" id="submitBtn"
                                            style="border-radius: 8px;background-color:#3b82f6;color: white; font-weight: 600;">Sign
                                            Up</button>
                                        <a href="/login"><button type="button"
                                                style="border-radius: 8px;background-color: #f59e0b;color: white; font-weight: 600;">Login</button></a>
                                    </div>
                                </form>
    </div>

    <script src="/js/register.js"></script>
</body>

</html>