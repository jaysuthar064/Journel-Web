<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Journal App</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Base styles and specific dashboard styles -->
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/loader.css">
</head>

<body class="dashboard-body">
    <!-- Loading Overlay -->
    <div class="page-loader loader-dashboard" id="pageLoader">
        <div class="loader-spinner"></div>
        <p class="loader-text">Loading your journals</p>
    </div>

    <nav class="dashboard-navbar">
        <div class="brand">
            <i class="bi bi-journal-text" style="color: #3b82f6;"></i>
            <span>Journal App</span>
        </div>
        <div class="nav-actions">
            <a href="/journel/new" class="btn-modern btn-modern-primary">
                <i class="bi bi-pencil-square"></i> New Entry
            </a>
            <a href="javascript:void(0)" class="btn-modern btn-modern-ghost" id="profileToggle" title="My Profile">
                <i class="bi bi-person-circle"></i>
            </a>
            <a href="/logout" class="btn-modern btn-modern-ghost" title="Logout">
                <i class="bi bi-box-arrow-right"></i>
            </a>
        </div>
    </nav>

    <!-- Profile Section (hidden by default) -->
    <div class="profile-section" id="profileSection" style="display: none;">
        <div class="dashboard-container">
            <div class="profile-card">
                <div class="profile-avatar">
                    <span>
                        <%= currentUser.name ? currentUser.name.charAt(0).toUpperCase() :
                            currentUser.email.charAt(0).toUpperCase() %>
                    </span>
                </div>
                <div class="profile-info">
                    <h2 class="profile-name">
                        <%= currentUser.name || 'Journal Writer' %>
                    </h2>
                    <p class="profile-email"><i class="bi bi-envelope"></i>
                        <%= currentUser.email %>
                    </p>
                    <div class="profile-meta">
                        <span class="profile-meta-item">
                            <i class="bi bi-calendar3"></i>
                            Joined <%= currentUser.created_at ? new
                                Date(currentUser.created_at).toLocaleDateString('en-US', { month: 'long' ,
                                year: 'numeric' }) : 'Recently' %>
                        </span>
                        <span class="profile-meta-item">
                            <i class="bi bi-journal-text"></i>
                            <%= journels.length %>
                                <%= journels.length===1 ? 'Entry' : 'Entries' %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Overview</h1>
        </div>

        <!-- Stats Banner -->
        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-icon"><i class="bi bi-journals"></i></div>
                <div class="stat-details">
                    <h4>Total Journals</h4>
                    <p>
                        <%= journels.length %>
                    </p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon" style="background: #f0fdf4; color: #16a34a;"><i class="bi bi-activity"></i></div>
                <div class="stat-details">
                    <h4>Activity</h4>
                    <p>Active</p>
                </div>
            </div>
        </div>

        <div class="dashboard-header">
            <h2 style="font-size: 1.5rem; font-weight: 600; color: #0f172a; margin: 0;">Your Entries</h2>
        </div>

        <% if (journels.length===0) { %>
            <!-- Modern Empty State -->
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-journal-x"></i>
                </div>
                <h3>No journals found</h3>
                <p>Get started by wrapping your thoughts into your first journal entry.</p>
                <a href="/journel/new" class="btn-modern btn-modern-primary">
                    <i class="bi bi-plus-lg"></i> Create First Journal
                </a>
            </div>
            <% } else { %>
                <!-- Render Journals Grid -->
                <div class="journals-grid">
                    <% journels.forEach(journal=> { %>
                        <div class="journal-card journal-card-clickable" data-title="<%= journal.title %>"
                            data-content="<%= journal.content %>"
                            data-date="<%= journal.created_at ? new Date(journal.created_at).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) : '' %>"
                            data-id="<%= journal.id %>">
                            <div class="journal-card-header">
                                <h3 class="journal-card-title">
                                    <%= journal.title %>
                                </h3>
                            </div>

                            <div class="journal-card-body">
                                <p class="journal-card-preview">
                                    <%= journal.content %>
                                </p>
                            </div>

                            <div class="journal-card-footer">
                                <div class="journal-card-date">
                                </div>
                                <div class="journal-card-actions">
                                    <a href="/journel/<%= journal.id %>/edit" class="action-btn edit-btn"
                                        title="Edit Journal">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form action="/journel/<%= journal.id %>?_method=DELETE" method="POST"
                                        style="display: inline; margin: 0; padding: 0;"
                                        onsubmit="return confirm('Are you sure you want to delete this journal?');">
                                        <button type="submit" class="action-btn delete-btn" title="Delete Journal">
                                            <i class="bi bi-trash3"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>

                    <!-- Journal Detail Modal -->
                    <div class="journal-modal-overlay" id="journalModal">
                        <div class="journal-modal">
                            <div class="journal-modal-header">
                                <h2 class="journal-modal-title" id="modalTitle"></h2>
                                <button class="journal-modal-close" id="modalClose" title="Close">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </div>
                            <div class="journal-modal-meta" id="modalMeta"></div>
                            <div class="journal-modal-body">
                                <p id="modalContent"></p>
                            </div>
                            <div class="journal-modal-footer">
                                <a href="#" class="btn-modern btn-modern-primary" id="modalEditBtn">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <button class="btn-modern btn-modern-ghost" id="modalCloseBtn">Close</button>
                            </div>
                        </div>
                    </div>

    </div>

</body>

<script>
    // Profile toggle
    const profileToggle = document.getElementById('profileToggle');
    const profileSection = document.getElementById('profileSection');
    profileToggle.addEventListener('click', () => {
        if (profileSection.style.display === 'none') {
            profileSection.style.display = 'block';
            profileToggle.classList.add('active');
        } else {
            profileSection.style.display = 'none';
            profileToggle.classList.remove('active');
        }
    });

    // Journal detail modal
    const modal = document.getElementById('journalModal');
    const modalTitle = document.getElementById('modalTitle');
    const modalContent = document.getElementById('modalContent');
    const modalMeta = document.getElementById('modalMeta');
    const modalEditBtn = document.getElementById('modalEditBtn');

    // Open modal on card click
    document.querySelectorAll('.journal-card-clickable').forEach(card => {
        card.addEventListener('click', (e) => {
            // Don't open modal if clicking edit/delete buttons
            if (e.target.closest('.journal-card-actions')) return;

            modalTitle.textContent = card.dataset.title;
            modalContent.textContent = card.dataset.content;
            modalMeta.innerHTML = card.dataset.date
                ? '<i class="bi bi-calendar3"></i> ' + card.dataset.date
                : '';
            modalEditBtn.href = '/journel/' + card.dataset.id + '/edit';

            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        });
    });

    // Close modal
    function closeModal() {
        modal.classList.remove('active');
        document.body.style.overflow = '';
    }

    document.getElementById('modalClose').addEventListener('click', closeModal);
    document.getElementById('modalCloseBtn').addEventListener('click', closeModal);
    modal.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
    });
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.classList.contains('active')) closeModal();
    });
</script>
<script src="/js/loader.js"></script>

</html>

<!-- Footer partial inclusion -->
<%- include('../partials/footer') %>